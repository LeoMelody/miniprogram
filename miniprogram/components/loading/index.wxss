/* components/loading/index.wxss */
.loading1 {
  height: 180rpx;
  margin-top: 400rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.loading1 text {
  display: inline-block;
  width: 16rpx;
  border-radius: 4rpx;
  background: #90ee90;
  animation: load 1.04s ease infinite;
  margin-left: 8rpx;
}


@keyframes load {
  0%, 100% {
    height: 60rpx;
    background: #90ee90;
  }

  50% {
    height: 100rpx;
    background: #add8e6;
  }
}

.loading1 text:nth-child(2) {
  animation-delay: 0.13s;  
}

.loading1 text:nth-child(3) {
  animation-delay: 0.26s;
}

.loading1 text:nth-child(4) {
  animation-delay: 0.39s;
}

.loading1 text:nth-child(5) {
  animation-delay: 0.52s;
}

.loading1 text:nth-child(6) {
  animation-delay: 0.65s;
}
